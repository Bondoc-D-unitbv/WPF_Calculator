<Window x:Class="MVP_Calc_V3.ProgrammerMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programmer Mode" Height="200" Width="350"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Grid>
        <ListBox Name="BaseList" SelectionChanged="BaseList_SelectionChanged">
            <ListBoxItem Content="Binary (2)" Tag="2" FontWeight="Bold" Background="#FF6D6D6D" Foreground="#FFE0E0E0"/>
            <ListBoxItem Content="Octal (8)" Tag="8" FontWeight="Bold" Background="#FF6D6D6D" Foreground="#FFE0E0E0"/>
            <ListBoxItem Content="Decimal (10)" Tag="10" FontWeight="Bold" Background="#FF6D6D6D" Foreground="#FFE0E0E0"/>
            <ListBoxItem Content="Hexadecimal (16)" Tag="16" FontWeight="Bold" Background="#FF6D6D6D" Foreground="#FFE0E0E0"/>
        </ListBox>

        <TextBox Name="BaseDisplay" IsReadOnly="True" FontSize="18"  Margin="10,95,10,10"/>
    </Grid>
</Window>
